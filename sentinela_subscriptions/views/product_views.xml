<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_subscription" model="ir.ui.view">
        <field name="name">product.template.form.subscription</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <page name="sales" position="after">
                <page string="Suscripción / Técnico" name="subscription_config">
                    <group>
                        <group string="Configuración de Suscripción">
                            <field name="is_subscription"/>
                            <field name="service_type"/>
                            <field name="default_recurring_interval"/>
                        </group>
                        <group string="Integración Mikrotik (Solo Internet)" invisible="service_type != 'internet'">
                            <field name="mikrotik_profile_id"/>
                        </group>
                    </group>
                    <group string="Plantilla de Contrato">
                        <field name="contract_template_id" context="{'default_service_type': service_type}"/>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
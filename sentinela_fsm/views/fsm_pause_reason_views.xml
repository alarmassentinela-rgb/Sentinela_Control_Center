<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_fsm_pause_reason_tree" model="ir.ui.view">
        <field name="name">fsm.pause.reason.tree</field>
        <field name="model">sentinela.fsm.pause.reason</field>
        <field name="arch" type="xml">
            <list string="Pause Reasons">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_quote_reason"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fsm_pause_reason_form" model="ir.ui.view">
        <field name="name">fsm.pause.reason.form</field>
        <field name="model">sentinela.fsm.pause.reason</field>
        <field name="arch" type="xml">
            <form string="Pause Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="is_quote_reason"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fsm_pause_reason" model="ir.actions.act_window">
        <field name="name">Pause Reasons</field>
        <field name="res_model">sentinela.fsm.pause.reason</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new reason for pausing a Field Service Order.
            </p>
        </field>
    </record>
</odoo>

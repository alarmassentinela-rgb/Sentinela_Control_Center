<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="menu_fsm_root" name="Gestion de Servicios" web_icon="sentinela_fsm,static/description/icon.png" sequence="30"/>

    <menuitem id="menu_fsm_dashboard" name="Tablero" parent="menu_fsm_root" action="action_fsm_order" sequence="10"/>

    <record id="action_fsm_my_orders" model="ir.actions.act_window">
        <field name="name">Mis Órdenes</field>
        <field name="res_model">sentinela.fsm.order</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="domain">[('technician_id', '=', uid), ('stage', '!=', 'done')]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No tienes órdenes asignadas pendientes.
          </p>
        </field>
    </record>

    <menuitem id="menu_fsm_my_orders" name="Mis Órdenes" parent="menu_fsm_root" action="action_fsm_my_orders" sequence="5"/>
    <menuitem id="menu_fsm_my_route" name="Mi Ruta del Día" parent="menu_fsm_root" action="action_fsm_my_orders" sequence="6"/>

    <menuitem id="menu_fsm_operations" name="Operaciones" parent="menu_fsm_root" sequence="20"/>
    <menuitem id="menu_fsm_orders" name="Todas las Órdenes" parent="menu_fsm_operations" action="action_fsm_order" sequence="10"/>
    <menuitem id="menu_fsm_routes" name="Rutas Optimizadas" parent="menu_fsm_operations" action="action_fsm_route_optimization" sequence="20" groups="group_fsm_manager"/>

    <menuitem id="menu_fsm_reporting" name="Reportes y Análisis" parent="menu_fsm_root" sequence="50" groups="group_fsm_manager"/>
    <menuitem id="menu_fsm_performance_dashboard" name="Dashboards de Desempeño" parent="menu_fsm_reporting" action="action_fsm_dashboard" sequence="10" groups="group_fsm_manager"/>

    <menuitem id="menu_fsm_config" name="Configuración" parent="menu_fsm_root" sequence="100" groups="group_fsm_manager"/>
    <menuitem id="menu_fsm_pause_reasons" name="Causas de Pausa" parent="menu_fsm_config" action="action_fsm_pause_reason" sequence="10"/>
</odoo>

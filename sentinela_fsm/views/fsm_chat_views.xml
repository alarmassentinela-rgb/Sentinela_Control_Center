<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_fsm_chat_message_form" model="ir.ui.view">
        <field name="name">sentinela.fsm.chat.message.form</field>
        <field name="model">sentinela.fsm.chat.message</field>
        <field name="arch" type="xml">
            <form string="Mensaje de Chat FSM">
                <header>
                    <button name="mark_as_read" string="Marcar como LeÃ­do" type="object" class="btn-success" invisible="is_read"/>
                </header>
                <sheet>
                    <group>
                        <group string="Participantes">
                            <field name="order_id"/>
                            <field name="sender_id"/>
                            <field name="receiver_id"/>
                        </group>
                        <group string="Detalles del Mensaje">
                            <field name="timestamp"/>
                            <field name="is_read"/>
                            <field name="message_type"/>
                        </group>
                    </group>
                    <group string="Mensaje">
                        <field name="message" nolabel="1"/>
                    </group>
                    <group string="Archivos Adjuntos">
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE/LIST VIEW -->
    <record id="view_fsm_chat_message_tree" model="ir.ui.view">
        <field name="name">sentinela.fsm.chat.message.tree</field>
        <field name="model">sentinela.fsm.chat.message</field>
        <field name="arch" type="xml">
            <list string="Mensajes de Chat FSM" decoration-success="is_read==False" decoration-muted="is_read==True">
                <field name="order_id"/>
                <field name="sender_id"/>
                <field name="receiver_id"/>
                <field name="timestamp"/>
                <field name="message"/>
                <field name="is_read"/>
            </list>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_fsm_chat_message_search" model="ir.ui.view">
        <field name="name">sentinela.fsm.chat.message.search</field>
        <field name="model">sentinela.fsm.chat.message</field>
        <field name="arch" type="xml">
            <search string="Buscar Mensajes de Chat">
                <field name="order_id"/>
                <field name="sender_id"/>
                <field name="receiver_id"/>
                <field name="message"/>
                <field name="is_read"/>
                <field name="message_type"/>
                <separator/>
                <filter name="unread" string="No LeÃ­dos" domain="[('is_read', '=', False)]"/>
                <filter name="today" string="Hoy" domain="[('timestamp', '&gt;=', time.strftime('%%Y-%%m-%%d 00:00:00')), ('timestamp', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_fsm_chat_message" model="ir.actions.act_window">
        <field name="name">Mensajes de Chat</field>
        <field name="res_model">sentinela.fsm.chat.message</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
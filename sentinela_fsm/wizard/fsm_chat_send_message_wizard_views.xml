<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fsm_chat_send_message_wizard_form" model="ir.ui.view">
        <field name="name">fsm.chat.send.message.wizard.form</field>
        <field name="model">sentinela.fsm.chat.send.message.wizard</field>
        <field name="arch" type="xml">
            <form string="Enviar Mensaje de Chat">
                <group>
                    <field name="order_id"/>
                    <field name="sender_id"/>
                    <field name="receiver_id"/>
                    <field name="message_type"/>
                </group>
                <group>
                    <field name="message" placeholder="Escribe tu mensaje aquÃ­..." nolabel="1" colspan="2"/>
                </group>
                <footer>
                    <button name="action_send_message" string="Enviar Mensaje" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fsm_chat_send_message_wizard" model="ir.actions.act_window">
        <field name="name">Enviar Mensaje de Chat</field>
        <field name="res_model">sentinela.fsm.chat.send.message.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_syscom_import_wizard_form" model="ir.ui.view">
        <field name="name">syscom.import.wizard.form</field>
        <field name="model">syscom.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar desde Syscom">
                <group>
                    <group>
                        <field name="import_type" widget="radio"/>
                        <field name="model_name" placeholder="Ej: B50-TURBO o HIKVISION"/>
                    </group>
                    <group>
                        <field name="limit"/>
                    </group>
                </group>
                <div class="alert alert-info" role="alert">
                    La importación descargará: Detalles, Precios, Imágenes y creará la Categoría si no existe.
                </div>
                <footer>
                    <button name="action_search_and_import" string="Buscar e Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_syscom_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar de Syscom</field>
        <field name="res_model">syscom.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_syscom_import"
              name="Importar de Syscom"
              parent="stock.menu_stock_root"
              action="action_syscom_import_wizard"
              sequence="5"/>
</odoo>

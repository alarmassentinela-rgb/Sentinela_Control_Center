<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_sign_document_request" model="mail.template">
            <field name="name">Solicitud de Firma Digital</field>
            <field name="model_id" ref="model_sentinela_sign_document"/>
            <field name="subject">Solicitud de Firma - {{ object.name }}</field>
            <field name="email_from">{{ (user.email_formatted or user.company_id.email) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hola <t t-out="object.partner_id.name or ''"/>,
                        <br/><br/>
                        Le hemos enviado un documento que requiere su firma digital.
                        <br/><br/>
                        Puede revisarlo y firmarlo en el siguiente enlace:
                        <br/>
                        <a t-att-href="object.get_portal_url()" style="background-color: #875A7B; padding: 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; display: inline-block; margin-top: 16px; margin-bottom: 16px;">
                            Revisar y Firmar
                        </a>
                        <br/>
                        Gracias,
                        <br/>
                        El equipo de Sentinela
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_alarm_priority_tree" model="ir.ui.view">
        <field name="name">sentinela.alarm.priority.list</field>
        <field name="model">sentinela.alarm.priority</field>
        <field name="arch" type="xml">
            <list string="Prioridades de Alarma">
                <field name="level"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color_hex" widget="color"/>
                <field name="priority_sound_filename" column_invisible="1"/>
                <field name="priority_sound" widget="binary" filename="priority_sound_filename"/>
                <field name="blink"/>
                <field name="is_reminder"/>
            </list>
        </field>
    </record>

    <record id="view_alarm_priority_form" model="ir.ui.view">
        <field name="name">sentinela.alarm.priority.form</field>
        <field name="model">sentinela.alarm.priority</field>
        <field name="arch" type="xml">
            <form string="Prioridad">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <strong>Tip de Audio:</strong> Cargue un archivo MP3 corto. El Dashboard lo reproducirá automáticamente cuando llegue una alarma de esta prioridad.
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="level"/>
                        </group>
                        <group>
                            <field name="color_hex" widget="color"/>
                            <field name="text_color_hex" widget="color"/>
                            <field name="priority_sound_filename" invisible="1"/>
                            <field name="priority_sound" widget="binary" filename="priority_sound_filename"/>
                            <field name="blink"/>
                            <field name="is_reminder"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alarm_priority" model="ir.actions.act_window">
        <field name="name">Prioridades de Alarma</field>
        <field name="res_model">sentinela.alarm.priority</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- OPERATOR DASHBOARD -->
    <template id="operator_dashboard" name="Dashboard de Operador">
        <t t-call="web.layout">
            <head>
                <script type="text/javascript" src="/web/static/lib/chart-js/Chart.js"></script>
            </head>
            <body>
                <div class="container-fluid">
                    <div class="page-title">
                        <h1>Central de Monitoreo</h1>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Señales Recibidas</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><t t-esc="signals_received"/></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-bell fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Señales Resueltas</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><t t-esc="signals_resolved"/></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Equipos Disponibles</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><t t-esc="teams_available"/></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-users fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Señales Pendientes</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800"><t t-esc="signals_pending"/></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-xl-8 col-lg-7">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Señales Recientes</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Tipo</th>
                                                    <th>Cliente</th>
                                                    <th>Fecha</th>
                                                    <th>Prioridad</th>
                                                    <th>Estado</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="recent_signals" t-as="signal">
                                                    <tr>
                                                        <td><t t-esc="signal.name"/></td>
                                                        <td><t t-esc="signal.signal_type"/></td>
                                                        <td><t t-esc="signal.partner_id.name"/></td>
                                                        <td><t t-esc="signal.received_date"/></td>
                                                        <td>
                                                            <span t-att-class="'badge badge-' + ('danger' if signal.priority == 'critical' else 'warning' if signal.priority == 'high' else 'info')">
                                                                <t t-esc="signal.priority"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span t-att-class="'badge badge-' + ('success' if signal.status == 'resolved' else 'primary' if signal.status in ['received', 'processing'] else 'warning')">
                                                                <t t-esc="signal.status"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-sm btn-primary">Atender</button>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-xl-4 col-lg-5">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Equipos de Respuesta</h6>
                                </div>
                                <div class="card-body">
                                    <t t-foreach="response_teams" t-as="team">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="mr-3">
                                                <div t-att-class="'icon-circle ' + ('bg-success' if team.status == 'available' else 'bg-warning' if team.status == 'busy' else 'bg-gray')">
                                                    <i class="fas fa-user-friends text-white"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="small font-weight-bold"><t t-esc="team.name"/></div>
                                                <div class="small text-gray-500"><t t-esc="team.status"/></div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                            
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Tipos de Señales</h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="signalsChart" width="100%" height="40"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        var ctx = document.getElementById("signalsChart");
                        var signalsChart = new Chart(ctx, {
                            type: 'doughnut',
                            data: {
                                labels: ["Alarmas", "Supervisión", "Fallas", "Pruebas"],
                                datasets: [{
                                    data: [<t t-esc="alarm_signals_count"/>, <t t-esc="supervision_signals_count"/>, <t t-esc="trouble_signals_count"/>, <t t-esc="test_signals_count"/>],
                                    backgroundColor: ['#e74a3b', '#f6c23e', '#4e73df', '#36b9cc'],
                                    hoverBackgroundColor: ['#de4337', '#f5bb3a', '#3e6dc9', '#2e9fc7'],
                                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                                }],
                            },
                            options: {
                                maintainAspectRatio: false,
                                tooltips: {
                                    backgroundColor: "rgb(255,255,255)",
                                    bodyFontColor: "#858796",
                                    borderColor: '#dddfeb',
                                    borderWidth: 1,
                                    xPadding: 15,
                                    yPadding: 15,
                                    displayColors: false,
                                    caretPadding: 10,
                                },
                                legend: {
                                    display: false
                                },
                                cutoutPercentage: 80,
                            },
                        });
                    });
                </script>
            </body>
        </t>
    </template>
</odoo>
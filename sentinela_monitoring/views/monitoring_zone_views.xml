<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Monitoring Zone Views -->
    <record id="view_sentinela_monitoring_zone_list" model="ir.ui.view">
        <field name="name">sentinela.monitoring.zone.list</field>
        <field name="model">sentinela.monitoring.zone</field>
        <field name="arch" type="xml">
            <list string="Zonas de Monitoreo" editable="bottom">
                <field name="zone_number"/>
                <field name="partition"/>
                <field name="name"/>
                <field name="zone_type"/>
                <field name="is_bypassed"/>
                <field name="device_id"/>
            </list>
        </field>
    </record>

    <record id="action_sentinela_monitoring_zone" model="ir.actions.act_window">
        <field name="name">Zonas de Monitoreo</field>
        <field name="res_model">sentinela.monitoring.zone</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
